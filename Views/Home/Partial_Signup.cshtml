<div class="col-lg-11 animated fadeInDown" style="float: none; margin-left: auto; margin-right: auto; text-align: center; background-color: rgba(255, 255, 255, 1); width: 30vw; border-radius: 10px;">

    @using (Html.BeginForm("SecureSignUp", "Home", FormMethod.Post))
    {
        <!-- LOG IN FORM -->
    <div class="form-signin" id="loginForm">
        <img style="margin-bottom: 3vh; margin-top: 3vh;" class="mb-4" src="~/images/user.png" alt="" width="92" height="92">
        <p style="margin-bottom: 3vh; font-size: 28pt;">Sign Up</p>

        <!-- EMAIL INPUT -->
        <div class="row">
            <div class="col-xs-1" style="margin-top: 2vh;">
                <span style="float: left; margin-top: 0vh;"><i id="email-check" class="far fa-circle"></i></span>
            </div>
            <div class="col-lg-10">
                <label for="inputEmail" class="sr-only">Email address</label>
                <input name="inputEmail" asp-for="inputEmail" type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
            </div>
        </div>

        <!-- EMAIL INPUT -->
        <div class="row">
            <div class="col-xs-1" style="margin-top: 2vh;">
                <span style="float: left; margin-top: 0vh;"><i id="email-check" class="far fa-circle"></i></span>
            </div>
            <div class="col-lg-10">
                <label for="inputUsername" class="sr-only">Username</label>
                <input name="inputUsername" asp-for="inputUsername" type="text" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
            </div>
        </div>

        <!-- PASSWORD INPUT -->
        <div class="row" style="margin-top: 1.5vh;">
            <div id="passwordInputCheck" class="col-xs-1" style="margin-top: 2vh;">
                <span style="float: left;"><i id="password-check" class="far fa-circle"></i></span>
            </div>
            <div class="col-lg-10">
                <label for="inputPassword" class="sr-only">Password</label>
                <input name="inputPassword" asp-for="inputPassword" type="password" pattern=".{8,}" required title="8 characters minimum" id="inputPassword" class="form-control" placeholder="Password">
            </div>
        </div>

        <!-- PASSWORD CHECK INPUT -->
        <div class="row">
            <div class="col-xs-1" style="margin-top: 2vh;">
                <span style="float: left; margin-top: 0vh;"><i id="password-double-check" class="far fa-circle"></i></span>
            </div>
            <div class="col-lg-10">
                <label for="inputPasswordCheck" class="sr-only">Confirm Password</label>
                <input asp-for="inputPasswordCheck" type="password" id="inputPasswordCheck" class="form-control" placeholder="Confirm Password" required>
            </div>
        </div>

        <!-- CLOSING ELEMENTS -->
        <button style="margin-top: 5vh;" onclick="submitForm()" class="btn btn-lg btn-primary btn-block">Sign up</button>
        <p style="margin-top: 3vh;">Already have an account? <span><a>Sign in</a></span> here!</p>
        <p style="margin-top: 5vh;" class="mt-5 mb-3 text-muted">&copy; Griffin Puc 2019</p>
    </div>
    }

<script src="~/js/signup/signup.js"></script>

</div>